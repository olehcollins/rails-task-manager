<div class="form">
  <%= form_for task do |f| %>
    <div class="field mb-3 col-3">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control", placeholder: 'title'%>
    </div>

    <div class="field mb-3 col-6">
      <%= f.label :details, class: "form-label" %>
      <%= f.text_area :details, rows: 4, class: "form-control", placeholder: 'details' %>
    </div>
    <%= f.submit "Save", class: "btn btn-primary col-2"%>
    <%= link_to "Back to list", tasks_url, class: "btn btn-danger back-link"%>
  <% end %>
</div>
